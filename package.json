{
  "name": "node-server-boilerplate",
  "type": "module",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "watch:build": "tsc -w",
    "watch:run": "nodemon --ext js,hbs,json --inspect dist/server.js",
    "dev": "concurrently \"npm:watch:build\" \"npm:watch:run\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "hbs": "^4.2.0",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/hbs": "^4.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3"
  }
}
