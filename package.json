{
  "name": "node-server-boilerplate",
  "type": "module",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "watch:build": "tsc -w",
    "watch:run": "nodemon --inspect dist/server.js",
    "dev": "concurrently \"npm:watch:build\" \"npm:watch:run\""
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  }
}
